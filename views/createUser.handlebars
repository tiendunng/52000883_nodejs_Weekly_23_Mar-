<div class="row justify-content-center" style="margin-top: 10px;">
    <div class="col-xl-5 col-lg-6 col-md-8 border mt-3 pt-3 rounded mx-3">
        <div class="form-group text-small">
            <small><a href="/">Quay lại</a></small>
        </div>
        <h4 class="text-success">Thêm người dùng mới</h4>
        <form novalidate class="mt-3" method="post" action="/users">
            <div class="form-group">
                <label for="user">Họ tên</label>
                <input class="form-control" type="text" placeholder="Nhập tên người dùng" id="name" name="name" value="{{data.name}}">
            </div>
            <div class="form-group" id="gender-user" data-gender="{{data.gender}}">
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="gender-male" name="gender" value="male">
                    <label class="custom-control-label" for="gender-male">Nam</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="gender-female" name="gender" value="female">
                    <label class="custom-control-label" for="gender-female">Nữ</label>
                </div>
            </div>
            <div class="form-group">
                <label for="age">Tuổi</label>
                <input class="form-control" type="number" placeholder="Nhập tuổi" min="18" max="100" id="age"
                    name="age" value="{{data.age}}">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="text" placeholder="Nhập email" id="email" name="email" value="{{data.email}}">
            </div>
            {{#if message}}
                <div class="alert alert-danger">
                    {{message}}
                </div>
            {{/if}}
            <div class="form-group">
                <button class="btn btn-success mr-2">Thêm người dùng</button>
            </div>
        </form>
    </div>
</div>

<script>
    const gender = document.getElementById('gender-user').getAttribute('data-gender')
    if (gender === 'male') {
        document.getElementById('gender-male').checked = true
    }
    if (gender === 'female') { //Don't use else in this case
        document.getElementById('gender-female').checked = true
    }
</script>